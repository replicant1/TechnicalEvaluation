<!--
Vertical linear layout has 5 rows and occupies all of tab body
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scenario_1_rows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9911"
    android:orientation="vertical"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="middle"
    android:padding="@dimen/activity_vertical_margin">

    <!--
    Row 1 of 5: Contains 5 items of equal width, side by side. The width of the items
    is dynamically calculated in code so that exactly 3 of the items shows at any time.
    The items are selectable on a mutually exclusive basis.
    -->

    <LinearLayout
        android:id="@+id/scenario_1_row_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00f"
        android:orientation="horizontal">

    </LinearLayout>

    <!-- Row 2 of 5: Contains a single ViewPager with 4 pages -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fe3" />

    <!--
    Row 3 of 5: Contains three TextViews of equal width, occupying the full
    width of the screen. Each TextView illustrates a different vertical text alignment
    (top, middle, bottom)
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbcc88"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/TextAlignmentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|top"
            android:layout_weight="1"
            android:text="TextView1" />

        <TextView
            style="@style/TextAlignmentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView2" />

        <TextView
            style="@style/TextAlignmentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="TextView3" />
    </LinearLayout>

    <!--
    Row 4 of 5: Contains a single TextView that displays the "name" of the item
    in Row 1 that is currently selected.
    -->

    <TextView
        android:id="@+id/scenario_1_row_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#eede"
        android:textSize="14sp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Here is some text"/>

    <!--
    Row 5 of 5: Contains three buttons of equal dimensions - Red, Blue and Green.
    Occupies full screen width.
    -->

    <LinearLayout
        android:id="@+id/scenario_1_row_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#0f0"
        android:orientation="horizontal"
        android:paddding="20dp">

