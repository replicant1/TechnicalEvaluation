<!--
Vertical linear layout has 5 rows and occupies all of tab body
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scenario_1_rows"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:divider="@drawable/divider_horizontal"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:showDividers="middle">

    <!--
    Row 1 of 5: Contains 5 items of equal width, side by side. The width of the items
    is dynamically calculated in code so that exactly 3 of the items shows at any time.
    The items are selectable on a mutually exclusive basis.
    -->

    <LinearLayout
        android:id="@+id/scenario_1_row_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@drawable/divider_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <!-- Row 1, Item 1 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#11cc34" />

        <!-- Row 1, Item 2 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#441134" />

        <!-- Row 1, Item 3 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dd0066" />

        <!-- Row 1, Item 4 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fa00ad" />

        <!-- Row 1, Item 5 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1abb66" />

    </LinearLayout>

    <!-- Row 2 of 5: Contains a single ViewPager with 4 pages -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fe3" />

    <!--
    Row 3 of 5: Contains three TextViews of equal width, occupying the full
    width of the screen. Each TextView illustrates a different vertical text alignment
    (top, middle, bottom)
    -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_vertical_light"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:showDividers="middle">

            <TextView
                style="@style/TextAlignmentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="TextView1" />

            <TextView
                style="@style/TextAlignmentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="TextView2" />

            <TextView
                style="@style/TextAlignmentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="TextView3" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--
    Row 4 of 5: Contains a single TextView that displays the "name" of the item
    in Row 1 that is currently selected.
    -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/scenario_1_row_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Here is some text"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>

    <!--
    Row 5 of 5: Contains three buttons of equal dimensions - Red, Blue and Green.
    Occupies full screen width.
    -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/scenario_1_row_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:showDividers="middle">


            <Button
                android:id="@+id/scenario_1_button_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#12ee56"
                android:gravity="center"
                android:text="Red"
                android:textSize="14sp"
                android:theme="@style/MyButton" />

            <Button
                android:id="@+id/scenario_1_button_green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#da32ae"
                android:gravity="center"
                android:text="Green"
                android:textSize="14sp" />

            <Button
                android:id="@+id/scenario_1_button_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#004aaa"
                android:gravity="center"
                android:text="Blue"
                android:textSize="14sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

