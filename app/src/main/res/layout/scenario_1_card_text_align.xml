<?xml version="1.0" encoding="utf-8"?>
<!--
   Row 3 of 5: Contains three TextViews of equal width, occupying the full
   width of the screen. Each TextView illustrates a different vertical text alignment
   (top, middle, bottom)
   -->
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        style="@style/CardView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_vertical_light"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/card_padding"
            android:paddingTop="@dimen/card_padding"
            android:showDividers="middle">

            <TextView
                android:id="@+id/text_alignment_top"
                style="@style/TextAlignmentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="@string/vertical_alignment_top"/>

            <TextView
                android:id="@+id/text_alignment_center"
                style="@style/TextAlignmentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/vertical_alignment_center"/>

            <TextView
                android:id="@+id/text_alignment_bottom"
                style="@style/TextAlignmentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="@string/vertical_alignment_bottom"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>