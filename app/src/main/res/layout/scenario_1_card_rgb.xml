<?xml version="1.0" encoding="utf-8"?>
<!--
Row 5 of 5: Contains three buttons of equal dimensions - Red, Blue and Green.
Occupies full screen width.
-->
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        style="@style/CardView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/scenario_1_row_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/card_padding"
            android:showDividers="middle">

            <Button
                android:id="@+id/scenario_1_button_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="RED"
                android:text="@string/red_button_label"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/scenario_1_button_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="GREEN"
                android:text="@string/green_button_label"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/scenario_1_button_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="BLUE"
                android:text="@string/blue_button_label"
                android:textSize="12sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</merge>