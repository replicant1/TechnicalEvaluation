<?xml version="1.0" encoding="utf-8"?>
<!--
Row 2 of 5: Contains a single ViewPager with 4 numbered pages and a page indicator underneath
-->

<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        style="@style/CardView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_vertical"
            android:orientation="vertical"
            android:padding="@dimen/card_padding"
            android:showDividers="middle">

            <android.support.v4.view.ViewPager
                android:id="@+id/scenario_1_numbered_fragment_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/scenario_1_numbered_fragmen_circle_page_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                app:fillColor="@color/Gray"
                app:radius="4dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</merge>